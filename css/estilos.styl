// Colores corporativos
azul_corporativo_primario = #19287F
amarillo_corporativo_primario = #FFD400
rojo_corporativo_secundario = #FF1B1C
azul_claro_corporativo_secundario = #8D9EBC
amarillo_corporativo_apoyo = #F8A815
azul_corporativo_apoyo = #1F2B50

@font-face
    font-family Futura
    src url('../fonts/futura/Futura Std Book.ttf')

body
    font-family Futura, Roboto

.badge_formulario
    font-size 1.3em
    height 1.3em

.block-features__item-title
    color azul_corporativo_primario
    font-weight 800

.block-zone__card
    cursor pointer

.dropcart__item-name>a:hover
    color azul_corporativo_primario


.btn_whatsapp
    position fixed
    bottom 20px
    right 20px
    background-color #25d366
    color white
    border none
    border-radius 50%
    width 60px
    height 60px
    box-shadow 0px 4px 6px rgba(0, 0, 0, 0.2)
    display flex
    align-items center
    justify-content center
    text-decoration none
    font-size 24px
    z-index 1000

.btn_whatsapp:hover
    background-color white
    cursor pointer

.indicator
    color azul_corporativo_primario
    font-family Futura, Roboto

.indicator:hover .indicator__button, .indicator--open .indicator__button
    background amarillo_corporativo_primario
    height 26px

.indicator__icon
    height 20px
    padding 0
    padding-left 20px
    width 20px

.main-menu__item, .section-header__title, .block-zone__tabs
    color azul_corporativo_primario
    font-weight bold

.main-menu .main-menu__item:hover .main-menu__link
    background amarillo_corporativo_primario;
    color white
    font-weight bold

.megamenu-links__item*
    color azul_corporativo_primario

// El menú crédito tiene un énfasis distinto
.menu_enfasis
    background amarillo_corporativo_primario;
    color white

    :hover
        background-color azul_corporativo_primario

.topbar--spaceship-start, .header__topbar-start-bg:before, .departments__button:hover
    background azul_corporativo_primario

// Submenú marcas
.departments__item, .departments__item-link, .departments__item-arrow, .hla
    color azul_corporativo_primario

    :hover
        background amarillo_corporativo_primario
        color white

.departments__button, .departments--open .departments__button
    color azul_corporativo_primario
    
.departments__button:hover, .departments--open .departments__button
    background amarillo_corporativo_primario

// Titulos en el detalle de producto
.product__title, .product-tabs__item, .spec__section-title, .shop-features__item-title
    color azul_corporativo_primario

.topbar--spaceship-end, .header__topbar-end-bg:before
    background amarillo_corporativo_primario

.topbar__button-label
    color azul_claro_corporativo_secundario

.topbar__button-label:hover
    color rojo_corporativo_secundario

.site__body
    margin-top 110px

.social-links__item--linkedin a
    background #0A66C2
    color white